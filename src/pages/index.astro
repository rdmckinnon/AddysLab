---
import BaseLayout from '../layouts/BaseLayout.astro';

const subjects = ['Math', 'Science', 'Engineering', 'Art', 'Technology', 'Robotics'];
const skills = [
  { title: 'Geometry Explorer', body: 'Learning about shapes, angles, and how they work together in 3D space.' },
  { title: 'Volume & Measurement', body: 'Understanding how to calculate volumes of spheres, cubes, and cylinders using formulas.' },
  { title: 'Raspberry Pi Enthusiast', body: 'Getting excited about computers, electronics, and how technology works.' },
  { title: 'Problem Solver', body: 'Breaking down tricky math problems and finding creative solutions.' },
  { title: 'Science Explorer', body: 'Asking questions, making predictions, and discovering how things work.' },
  { title: 'STEM Learner', body: 'Building knowledge in Science, Technology, Engineering, and Math every day.' },
];
const projects = [
  { title: 'Geometry Lab', body: 'Learning about shapes · angles · 3D transformations', link: '/experiments' },
  { title: 'Volume Calculator', body: 'Understanding how to measure 3D shapes · using real math formulas', link: '/experiments' },
  { title: 'Pattern Explorer', body: 'Discovering patterns in nature · Fibonacci spirals · symmetry', link: '/experiments' },
  { title: 'Raspberry Pi Dreams', body: 'Learning about computers · circuits · future robotics projects', link: '/projects' },
];
const quotes = [
  'Mathematics is the music of reason.',
  'Every shape tells a story in geometry.',
  'Science is magic that works.',
];
---
<BaseLayout title="Addy's Lab – STEM Explorer" description="A creative space for math, science, and coding experiments.">
  <section class="hero">
    <div class="container hero-content">
      <div class="hero-text">
        <span class="hero-eyebrow">5th Grade STEM Student</span>
        <h1>I love learning about <span class="highlight">math & science</span></h1>
        <p>Welcome to my lab! This is where I explore geometry, discover cool patterns, and learn about technology like Raspberry Pi.</p>
        <div class="hero-buttons">
          <a class="btn btn-primary" href="/experiments">See Experiments</a>
          <a class="btn" href="/projects">View Projects</a>
        </div>
      </div>
      <div class="hero-art">
        <svg class="hero-image" viewBox="0 0 340 280" fill="none" xmlns="http://www.w3.org/2000/svg">
          <!-- Raspberry Pi Board -->
          <rect x="20" y="40" width="300" height="200" rx="12" fill="url(#raspberryGradient)" stroke="#20191b" stroke-width="3"/>

          <!-- USB Ports (right side) -->
          <rect x="290" y="70" width="30" height="30" rx="4" fill="#ffe5d9" stroke="#20191b" stroke-width="2"/>
          <rect x="290" y="110" width="30" height="30" rx="4" fill="#ffe5d9" stroke="#20191b" stroke-width="2"/>

          <!-- HDMI Port (bottom) -->
          <rect x="60" y="220" width="50" height="20" rx="3" fill="#ffe5d9" stroke="#20191b" stroke-width="2"/>

          <!-- Power Port (bottom left) -->
          <rect x="20" y="220" width="30" height="20" rx="3" fill="#ffe5d9" stroke="#20191b" stroke-width="2"/>

          <!-- SD Card slot (top) -->
          <rect x="140" y="30" width="60" height="12" rx="2" fill="#ffe5d9" stroke="#20191b" stroke-width="2"/>

          <!-- GPIO Pins Header -->
          <g>
            <!-- Pin header background -->
            <rect x="40" y="60" width="80" height="140" rx="4" fill="#20191b" opacity="0.1"/>
            <!-- Pin rows -->
            <rect x="50" y="70" width="8" height="8" rx="1" fill="#20191b"/>
            <rect x="62" y="70" width="8" height="8" rx="1" fill="#20191b"/>
            <rect x="50" y="82" width="8" height="8" rx="1" fill="#20191b"/>
            <rect x="62" y="82" width="8" height="8" rx="1" fill="#20191b"/>
            <rect x="50" y="94" width="8" height="8" rx="1" fill="#20191b"/>
            <rect x="62" y="94" width="8" height="8" rx="1" fill="#20191b"/>
            <rect x="50" y="106" width="8" height="8" rx="1" fill="#20191b"/>
            <rect x="62" y="106" width="8" height="8" rx="1" fill="#20191b"/>
            <rect x="50" y="118" width="8" height="8" rx="1" fill="#20191b"/>
            <rect x="62" y="118" width="8" height="8" rx="1" fill="#20191b"/>
            <rect x="50" y="130" width="8" height="8" rx="1" fill="#20191b"/>
            <rect x="62" y="130" width="8" height="8" rx="1" fill="#20191b"/>
            <rect x="50" y="142" width="8" height="8" rx="1" fill="#20191b"/>
            <rect x="62" y="142" width="8" height="8" rx="1" fill="#20191b"/>
            <rect x="50" y="154" width="8" height="8" rx="1" fill="#20191b"/>
            <rect x="62" y="154" width="8" height="8" rx="1" fill="#20191b"/>
            <rect x="50" y="166" width="8" height="8" rx="1" fill="#20191b"/>
            <rect x="62" y="166" width="8" height="8" rx="1" fill="#20191b"/>
            <rect x="50" y="178" width="8" height="8" rx="1" fill="#20191b"/>
            <rect x="62" y="178" width="8" height="8" rx="1" fill="#20191b"/>
          </g>

          <!-- Ethernet Port (right side, bottom) -->
          <rect x="290" y="180" width="30" height="35" rx="4" fill="#ffe5d9" stroke="#20191b" stroke-width="2"/>

          <!-- CPU Chip (center) -->
          <rect x="180" y="100" width="80" height="80" rx="6" fill="#f4acb7" stroke="#20191b" stroke-width="3"/>
          <circle cx="220" cy="140" r="20" fill="none" stroke="#20191b" stroke-width="2"/>

          <!-- Mounting Holes -->
          <circle cx="35" cy="55" r="5" fill="none" stroke="#20191b" stroke-width="2"/>
          <circle cx="305" cy="55" r="5" fill="none" stroke="#20191b" stroke-width="2"/>
          <circle cx="35" cy="225" r="5" fill="none" stroke="#20191b" stroke-width="2"/>
          <circle cx="305" cy="225" r="5" fill="none" stroke="#20191b" stroke-width="2"/>

          <!-- LED indicators -->
          <circle cx="280" cy="60" r="4" fill="#eb6478"/>
          <circle cx="270" cy="60" r="4" fill="#f4acb7"/>

          <defs>
            <linearGradient id="raspberryGradient" x1="0%" y1="0%" x2="100%" y2="100%">
              <stop offset="0%" style="stop-color:#ffe5d9;stop-opacity:1" />
              <stop offset="100%" style="stop-color:#ffcad4;stop-opacity:1" />
            </linearGradient>
          </defs>
        </svg>
      </div>
    </div>
  </section>

  <section class="tool-ribbon">
    <ul>
      {subjects.map((subject) => (
        <li>{subject}</li>
      ))}
    </ul>
  </section>

  <section class="services">
    <div class="container">
      <h2>What I'm Learning & Building</h2>
      <div class="services-grid">
        {skills.map((skill) => (
          <div class="service-cell">
            <h3>{skill.title}</h3>
            <p>{skill.body}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="portfolio">
    <div class="container">
      <h2>Featured Projects</h2>
      <div class="portfolio-grid">
        {projects.map((item) => (
          <article class="portfolio-card">
            <div class="portfolio-thumb"></div>
            <h3>{item.title}</h3>
            <p>{item.body}</p>
          </article>
        ))}
      </div>
    </div>
  </section>

  <section class="testimonials">
    <div class="container">
      <h2>Why I Love STEM</h2>
      <div class="testimonial-grid">
        {quotes.map((quote) => (
          <div class="testimonial-card">
            <p>"{quote}"</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="cta">
    <div class="container">
      <div class="cta-card">
        <h2>Check out my learning adventures!</h2>
        <p>Explore interactive geometry experiments, see how volume formulas work with real shapes, and discover the amazing patterns in math and nature.</p>
        <a class="btn btn-primary" href="/experiments">See My Experiments</a>
      </div>
    </div>
  </section>
</BaseLayout>
