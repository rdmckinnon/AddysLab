---
import BaseLayout from '../layouts/BaseLayout.astro';

const projects = [
  {
    title: 'Geometry Lab',
    date: '2025',
    category: 'Math Learning',
    description: 'Learning about different shapes and how they move and transform. Understanding angles, rotations, and how shapes can change size while keeping their form.',
    skills: ['Geometry', 'Shapes', 'Angles', 'Measurement'],
    highlights: [
      'Learning about 4 different shape types',
      'Understanding transformations',
      'Exploring rotation and scaling',
      'Seeing math in action!'
    ]
  },
  {
    title: 'Volume Calculator',
    date: '2025',
    category: 'Math & Formulas',
    description: 'Using real math formulas to calculate how much space is inside 3D shapes. Learning the formulas for spheres, cubes, and cylinders.',
    skills: ['Mathematics', 'Volume', 'Formulas', 'Problem Solving'],
    highlights: [
      'Sphere volume: V = 4/3œÄr¬≥',
      'Cube volume: V = s¬≥',
      'Cylinder volume: V = œÄr¬≤h',
      'Changing sizes and seeing volumes change'
    ]
  },
  {
    title: 'Angle Explorer',
    date: '2025',
    category: 'Geometry',
    description: 'Discovering different types of angles and learning to identify them. Understanding acute, obtuse, right, and reflex angles.',
    skills: ['Geometry', 'Angles', 'Measurement', 'Classification'],
    highlights: [
      'Learning angle names and types',
      'Measuring angles from 0¬∞ to 360¬∞',
      'Understanding what makes each angle special',
      'Seeing angles visually'
    ]
  },
  {
    title: 'Pattern Discovery',
    date: '2025',
    category: 'Math in Nature',
    description: 'Exploring amazing patterns found in math and nature, like the Fibonacci spiral in sunflowers and seashells. Learning about symmetry and repeating shapes.',
    skills: ['Patterns', 'Fibonacci', 'Symmetry', 'Nature'],
    highlights: [
      'The golden angle (137.5¬∞)',
      'Symmetrical patterns',
      'Tessellations (shapes that fit together)',
      'Math in flowers, shells, and art'
    ]
  },
  {
    title: 'Raspberry Pi Learning',
    date: '2025',
    category: 'Technology',
    description: 'Starting to learn about Raspberry Pi - a tiny computer that can do amazing things! Exploring how computers work and dreaming about future projects.',
    skills: ['Technology', 'Computers', 'Electronics', 'Curiosity'],
    highlights: [
      'What is a Raspberry Pi?',
      'Learning about circuits and electronics',
      'Ideas for future projects',
      'Understanding how computers think'
    ]
  }
];
---
<BaseLayout title="Projects ‚Äì Addy's Lab" description="A collection of STEM projects and experiments">
  <section class="container" style="padding:3rem 0 2rem;">
    <h1 class="section-heading">My STEM Learning Journey</h1>
    <p class="text-muted" style="max-width: 700px; margin: 0 auto 3rem;">
      Here are the things I'm learning and exploring in math, science, and technology.
      Each topic helps me understand how the world works!
    </p>
  </section>

  <section class="projects-grid container">
    {projects.map((project) => (
      <article class="project-card">
        <div class="project-header">
          <span class="project-category">{project.category}</span>
          <span class="project-date">{project.date}</span>
        </div>
        <h2>{project.title}</h2>
        <p class="project-description">{project.description}</p>

        <div class="project-highlights">
          <h3>Key Features:</h3>
          <ul>
            {project.highlights.map((highlight) => (
              <li>{highlight}</li>
            ))}
          </ul>
        </div>

        <div class="project-skills">
          {project.skills.map((skill) => (
            <span class="skill-tag">{skill}</span>
          ))}
        </div>
      </article>
    ))}
  </section>

  <section class="learning-section container">
    <div class="learning-card">
      <h2>What I'm Learning</h2>
      <div class="learning-grid">
        <div class="learning-item">
          <h3>üìê Geometry</h3>
          <p>Angles, shapes, transformations, and how objects move in space</p>
        </div>
        <div class="learning-item">
          <h3>üìä Volume & Area</h3>
          <p>How to measure 2D and 3D objects using math formulas</p>
        </div>
        <div class="learning-item">
          <h3>ü§ñ Raspberry Pi</h3>
          <p>Learning about mini computers and how they can control things</p>
        </div>
        <div class="learning-item">
          <h3>üî¨ STEM Skills</h3>
          <p>Asking questions, solving problems, and discovering how things work</p>
        </div>
      </div>
    </div>
  </section>

  <style>
    .section-heading {
      text-align: center;
      font-size: 2.5rem;
      margin-bottom: 1rem;
      background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .text-muted {
      text-align: center;
      color: var(--color-muted);
      line-height: 1.6;
    }

    .projects-grid {
      display: grid;
      gap: 2rem;
      margin-bottom: 3rem;
    }

    .project-card {
      background: var(--color-surface);
      backdrop-filter: blur(20px);
      border-radius: var(--radius-lg);
      padding: 2rem;
      box-shadow: var(--shadow-soft);
      border: 1px solid var(--color-outline);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .project-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 50px 100px -50px rgba(45, 22, 90, 0.5);
    }

    .project-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 1rem;
    }

    .project-category {
      background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
      color: white;
      padding: 0.35rem 0.9rem;
      border-radius: 20px;
      font-size: 0.85rem;
      font-weight: 600;
    }

    .project-date {
      color: var(--color-muted);
      font-size: 0.9rem;
    }

    .project-card h2 {
      font-size: 1.75rem;
      margin-bottom: 1rem;
      color: var(--color-ink);
    }

    .project-description {
      color: var(--color-muted);
      line-height: 1.7;
      margin-bottom: 1.5rem;
    }

    .project-highlights {
      margin-bottom: 1.5rem;
    }

    .project-highlights h3 {
      font-size: 1rem;
      margin-bottom: 0.75rem;
      color: var(--color-ink);
      font-weight: 600;
    }

    .project-highlights ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .project-highlights li {
      padding: 0.5rem 0;
      padding-left: 1.5rem;
      position: relative;
      color: var(--color-muted);
    }

    .project-highlights li:before {
      content: '‚úì';
      position: absolute;
      left: 0;
      color: var(--color-primary);
      font-weight: bold;
    }

    .project-skills {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      margin-top: 1.5rem;
      padding-top: 1.5rem;
      border-top: 1px solid var(--color-outline);
    }

    .skill-tag {
      background: rgba(196, 182, 255, 0.2);
      color: var(--color-ink);
      padding: 0.4rem 0.9rem;
      border-radius: 12px;
      font-size: 0.85rem;
      font-weight: 500;
    }

    .learning-section {
      padding: 2rem 0 4rem;
    }

    .learning-card {
      background: var(--color-surface);
      backdrop-filter: blur(20px);
      border-radius: var(--radius-lg);
      padding: 2.5rem;
      box-shadow: var(--shadow-soft);
      border: 1px solid var(--color-outline);
    }

    .learning-card h2 {
      text-align: center;
      font-size: 2rem;
      margin-bottom: 2rem;
      color: var(--color-ink);
    }

    .learning-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 2rem;
    }

    .learning-item {
      text-align: center;
    }

    .learning-item h3 {
      font-size: 1.5rem;
      margin-bottom: 0.5rem;
      color: var(--color-ink);
    }

    .learning-item p {
      color: var(--color-muted);
      line-height: 1.6;
    }

    @media (max-width: 768px) {
      .project-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.5rem;
      }

      .learning-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</BaseLayout>
